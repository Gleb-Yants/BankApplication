<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation=
            "http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Bank</display-name>
    <servlet>
        <servlet-name>MainFrameServlet</servlet-name>
        <servlet-class>com.nameless.bank.web.MainFrameServlet</servlet-class>
    </servlet>    
    <servlet-mapping>
        <servlet-name>MainFrameServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
<servlet>
        <servlet-name>ClientFrameServlet</servlet-name>
        <servlet-class>com.nameless.bank.web.ClientFrameServlet</servlet-class>
    </servlet>    
    <servlet-mapping>
        <servlet-name>ClientFrameServlet</servlet-name>
        <url-pattern>/addClient</url-pattern>
    </servlet-mapping>
<servlet>
        <servlet-name>AccountFrameServlet</servlet-name>
        <servlet-class>com.nameless.bank.web.AccountFrameServlet</servlet-class>
    </servlet>    
    <servlet-mapping>
        <servlet-name>AccountFrameServlet</servlet-name>
        <url-pattern>/accounts</url-pattern>
    </servlet-mapping>
<servlet>
        <servlet-name>AccountAddFrameServlet</servlet-name>
        <servlet-class>com.nameless.bank.web.AccountAddFrameServlet</servlet-class>
    </servlet>    
    <servlet-mapping>
        <servlet-name>AccountAddFrameServlet</servlet-name>
        <url-pattern>/addAccount</url-pattern>
    </servlet-mapping>
<servlet>
        <servlet-name>TransactionsFrameServlet</servlet-name>
        <servlet-class>com.nameless.bank.web.TransactionsFrameServlet</servlet-class>
    </servlet>    
    <servlet-mapping>
        <servlet-name>TransactionsFrameServlet</servlet-name>
        <url-pattern>/transactions</url-pattern>
    </servlet-mapping>
<servlet>
        <servlet-name>TransactFrameServlet</servlet-name>
        <servlet-class>com.nameless.bank.web.TransactFrameServlet</servlet-class>
    </servlet>    
    <servlet-mapping>
        <servlet-name>TransactFrameServlet</servlet-name>
        <url-pattern>/transact</url-pattern>
    </servlet-mapping>
        <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/CitizensDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>